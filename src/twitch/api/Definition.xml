<TwitchAPI>

  <collection name="ads">
    <endpoint name="StartCommercial" method="Post" path="channels/commercial" scope="channel:edit:commercial">
      Starts a commercial on a specified channel.
      <request>
        <param name="broadcaster_id" type="string">
          ID of the channel requesting a commercial
          Minimum: 1 Maximum: 1
        </param>
        <param name="length" type="int">
          Desired length of the commercial in seconds. 
          Valid options are 30, 60, 90, 120, 150, 180.
        </param>
      </request>
      <response>
        <param name="length" type="int">
          Length of the triggered commercial
        </param>
        <param name="message" type="string">
          Provides contextual information on why the request failed
        </param>
        <param name="retry_after" type="string">
          Seconds until the next commercial can be served on this channel
        </param>
      </response>
    </endpoint>
  </collection>

  <collection name="users">
    <endpoint name="GetUsers" path="users">
      <query>
        <param name="id" type="string" optional="1" />
        <param name="login" type="string" optional="1" />
      </query>
      <response>
        <param name="id" type="string" />
        <param name="login" type="string" />
        <param name="display_name" type="string" />
        <param name="type" type="string" />
        <param name="broadcaster_type" type="string" />
        <param name="description" type="string" />
        <param name="profile_image_url" type="string" />
        <param name="offline_image_url" type="string" />
        <param name="view_count" type="int" />
        <param name="email" type="string" optional="1" />
        <param name="created_at" type="string" />
      </response>
    </endpoint>
  </collection>
</TwitchAPI>